#!/bin/sh

# in ASCII:
# Oct   Dec   Hex   Char
# 033   27    1B    ESC (escape)

ESC="\033"
RED="${ESC}[31m"
GREEN="${ESC}[32m"
YELLOW="${ESC}[33m"
BLUE="${ESC}[34m"
MAGENTA="${ESC}[35m"
CYAN="${ESC}[36m"
WHITE="${ESC}[37m"
RESET="${ESC}[0m"

printf "%b" "
$RED███▄  $GREEN███▄  $YELLOW███▄  $BLUE███▄  $MAGENTA███▄  $CYAN███▄  $WHITE███▄
$RED████  $GREEN████  $YELLOW████  $BLUE████  $MAGENTA████  $CYAN████  $WHITE████
$RED████  $GREEN████  $YELLOW████  $BLUE████  $MAGENTA████  $CYAN████  $WHITE████
$RED ▀▀▀   $GREEN▀▀▀   $YELLOW▀▀▀   $BLUE▀▀▀   $MAGENTA▀▀▀   $CYAN▀▀▀   $WHITE▀▀▀
$RESET"
