font-family = JetBrainsMono Nerd Font
font-size = 11

theme = dark: GruvboxDark, light: GruvboxLight
# theme = dark: jellybeans-muted, light: jellybeans-light

# Disable cursor blink
shell-integration-features = no-cursor, ssh-terminfo

mouse-hide-while-typing = true

# Distribute padding on each side uniformly
window-padding-balance = true
# window-width = 100
# window-height = 26

keybind = global:alt+t=toggle_quick_terminal

# Can't press ctrl+shift+comma on an ISO keyboard
keybind = ctrl+shift+semicolon=reload_config
# This one is from the Blackbox terminal emulator
keybind = ctrl+shift+h=toggle_window_decorations

keybind = ctrl+shift+w=close_surface

keybind = ctrl+alt+shift+l=new_split:right
keybind = ctrl+alt+shift+j=new_split:down
keybind = ctrl+alt+h=goto_split:left
keybind = ctrl+alt+j=goto_split:down
keybind = ctrl+alt+k=goto_split:up
keybind = ctrl+alt+l=goto_split:right


