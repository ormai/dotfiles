# vi:ft=conf
set selection-clipboard clipboard # Copy selected text to clipboard
set recolor true                  # Recolor by default
set recolor-keephue true          # En/Disables keeping original hue when recoloring
set recolor-reverse-video false   # Defines if original image colors should be kept while recoloring.
set statusbar-home-tilde true     # Display a short version of the file path, which replaces $HOME with ~, in the statusbar.
set vertical-center true          # Center the screen at the vertical midpoint of the page by default.
set guioptions ""                 # Shows or hides GUI elements. [ c (command line), s (statusbar), h (horizontal scrollbar), v (vertical scrollbar)].
set statusbar-h-padding 10        # Defines the horizontal padding of the statusbar and notificationbar
set statusbar-v-padding 3         # Defines the vertical padding of the statusbar and notificationbar

set recolor-lightcolor "#242424" # Defines the color value that is used to represent dark colors in recoloring mode
set recolor-darkcolor "#ffffff"  # Defines the color value that is used to represent light colors in recoloring mode

set highlight-color "#78aeed"        # Defines the color that is used for highlighting parts of the document (e.g.: show search results)
set highlight-fg "#3584e4"           # Defines the color that is used for text when highlighting parts of the document (e.g.: number for links).
set highlight-active-color "#78aeed" # Defines the color that is used to show the current selected highlighted element (e.g: current search result)

set completion-bg "#242424"           # Defines the background color that is used for command line completion entries
set completion-fg "#ffffff"           # Defines the foreground color that is used for command line completion entries
set completion-group-bg "#504945"     # Defines the background color that is used for command line completion group elements
set completion-group-fg "#3584e4"     # Defines the foreground color that is used for command line completion group elements
set completion-highlight-bg "#ffffff" # Defines the background color that is used for the current command line completion element
set render-loading-bg "#242424" # Defines the background color that is used for the "Loading..." text.

set render-loading-fg "#ffffff" # Defines the foreground color that is used for the "Loading..." text.
set default-fg "#ffffff"        # Defines the default foreground color
set default-bg "#242424"        # Defines the default background color
set font "monospace normal 12"

set inputbar-bg "#242424"
set inputbar-fg "#ffffff"
set statusbar-bg "#242424"
set statusbar-fg "#ffffff"

set notification-bg "#242424"       # Defines the background color for a notification
set notification-fg "#ffffff"       # Defines the foreground color for a notification
set notification-error-bg "#242424" # Defines the background color for an error notification

set notification-error-fg "#f8e45c"      # Defines the foreground color for an error notification
set notification-warning-bg "#242424"    # Defines the background color for a warning notification
set notification-warning-fg "#ff7b63"    # Defines the foreground color for a warning notification

set index-fg "#ffffff"                   # Defines the foreground color of the index mode.
set index-bg "#242424"                   # Define the background color of the index mode.
set index-active-fg "#242424"            # Defines the foreground color of the selected element in index mode.
set index-active-bg "#3584e4"            # Define the background color of the selected element in index mode.
