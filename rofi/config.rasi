// vim:ft=rasi
@import "vars"

// Rofi defaults

configuration {
  font:                             "Inconsolata Nerd Font 14";
  show-icons:                       false;
  disable-history:                  false;
  hide-scrollbar:                   true;
}

window {
  background-color:                 @bg;
  text-color:                       @fg;
  border:                           2px;
  border-color:                     @border;
  border-radius:                    @bordrad;
}

prompt {
  background-color:                 @transparent;
  text-color:                       @accent;
  font:                             "Inconsolata NF 25";
}

entry {
  background-color:                 @transparent;
  text-color:                       @fg;
  placeholder-color:                @fg-dimmed;
  expand:                           true;
  horizontal-align:                 0;
  blink:                            false;
}

inputbar {
  children:                         [ prompt, entry ];
  background-color:                 @bg-light;
  text-color:                       @fg;
  padding:                          15 20 6 20;
}

listview {
  background-color:                 @bg;
  padding:                          3;
  columns:                          1;
  lines:                            5;
  cycle:                            false;
  dynamic:                          true;
  layout:                           vertical;
  border-radius:                    @bordrad;
  border-color:                     @bg-light;
  border:                           1px;
  margin:                           -2 -1 -1 -1;
}

mainbox {
  background-color:                 @border;
  border-color:                     @border;
  children:                         [ inputbar, listview ];
}

element {
  background-color:                 @transparent;
  orientation:                      vertical;
  border-radius:                    @bordrad;
  padding:                          10 0;
}

element-text {
  text-color:                       @fg;
  background-color:                 @transparent;
  expand:                           true;
  horizontal-align:                 0.5;
  vertical-align:                   0.5;
}

element selected {
  background-color:                 @bg-element-selected;
  border-radius:                    @bordrad;
}
