# vim:ft=conf

set preview on
set previewer ctpv
set cleaner ctpvclear
&ctpv -s $id
&ctpvquit $id

set shell sh
set shellopts '-eu'
set ifs "\n"
set scrolloff 10
set icons on
set dircounts on
set autoquit on
set timefmt "[2/03/2006 15:04:05]"
set tabstop 2 

# Mappings
map A rename # at the very end
map c push A<c-u> # new name
map I push A<c-a> # at the very beginning
map i push A<a-b><a-b><a-f> # before extention
map a push A<a-b> # after extention

map Y $printf "%s" "$fx" | wl-copy # yank the path
map <enter> shell
map t trash
map x delete
map u :{{
  clear
  unselect
}}

# Commands
cmd dir %mkdir $1
cmd new %touch $1
cmd nvim %nvim $1
cmd trash %set -f; mv "$f" $XDG_CACHE_HOME/trash

cmd extract ${{
    set -f
    case $f in
        *.tar.bz|*.tar.bz2|*.tbz|*.tbz2) tar xjvf $f;;
        *.tar.gz|*.tgz) tar xzvf $f;;
        *.tar.xz|*.txz) tar xJvf $f;;
        *.zip) unzip $f;;
        *.rar) unrar x $f;;
        *.7z) 7z x $f;;
    esac
}}

cmd tar ${{ # :tar archive
    set -f
    mkdir $1
    cp -r $fx $1
    tar czf $1.tar.gz $1
    rm -rf $1
}}

cmd zip ${{ # :zip zipped
    set -f
    mkdir $1
    cp -r $fx $1
    zip -r $1.zip $1
    rm -rf $1
}}
